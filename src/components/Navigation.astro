---
import { Image } from "astro:assets";
import star from "../icons/star.svg";
import logo from "../assets/icons/logo-kooa.svg";
import Icon from "astro-icon";

let currentPath = Astro.request.url;
---

<nav>
  <ul class="lower-container">
    <li class="link">
      <a
        data-strength="20"
        class={`${currentPath === "/" ? "active" : ""} magnetic`}
        href="/"
        style="--delay:4;"
        ><span>Home</span>
        <Icon name="star" />
      </a>
    </li>
    <li class="link">
      <a
        href="/creation-de-site-internet"
        style="--delay:3;"
        class="magnetic"
        data-strength="20"
        ><span>Cr√©ation site internet</span>
        <Icon name="star" />
      </a>
    </li>
    <li class="link">
      <a
        href="/support-et-maintenance-web"
        style="--delay:2;"
        class="magnetic"
        data-strength="20"
        ><span>Support & maintenance web</span>
        <Icon name="star" />
      </a>
    </li>
    <li class="link">
      <a
        data-strength="20"
        href="javascript:void(0)"
        class="coming-soon magnetic"
        aria-disabled="true"
        style="--delay:1;"
        ><span>Blog</span>
        <Icon name="star" />
      </a>
    </li>
  </ul>
</nav>

<style lang="scss">
  body {
    nav {
      position: absolute;
      width: calc(100% - 1.875rem);
      margin-inline: auto;
      max-width: 25rem;
      pointer-events: all;
      @media screen and (min-width: 81.25rem) {
        font-size: 1.0625rem;
      }
    }

    .nav-hub {
      position: relative;
      height: 4.125rem;
      width: 100%;
      display: flex;
      justify-content: space-between;
      align-items: center;
      z-index: 30;

      #cross,
      #logoOpen {
        padding: 0.5rem;
        position: relative;
        pointer-events: none;
        padding: unset;
        span {
          // background-color: red;
          display: block;
          padding: 8px;

          transition: color 0.3s cubic-bezier(0.5, 0, 0.15, 1);
          @media (hover: hover) {
            &:hover {
              color: var(--clr-text-400);
            }
          }
        }
      }
      #cross {
        right: calc(1.75rem - 0.5rem);
        transform: translateX(-40px);
      }
      #logoOpen {
        left: calc(1.75rem - 0.5rem);
        transform: translateX(40px);
      }
    }

    ul {
      position: relative;
      transform-origin: bottom;
    }

    ul.lower-container {
      z-index: 30;
      background-color: rgb(60, 60, 60);
    }

    li {
      display: flex;
      justify-content: space-between;
      border-bottom: 1px solid var(--clr-border);

      &:last-child {
        border-bottom: unset;
      }
      &.langues {
        a {
          width: unset;
          padding-inline: unset;
          // letter-spacing: 0.05em;
          span {
            color: var(--clr-text-400);
            height: 4rem;
            padding-inline: 1.75rem;
            display: flex;
            align-items: center;
            transition: color 0.3s cubic-bezier(0.5, 0, 0.15, 1);
            @media (hover: hover) {
              &:hover {
                color: var(--clr-text-100);
              }
            }
          }
          &.active span {
            color: var(--clr-text-100);
          }
        }
      }
      a {
        cursor: pointer;
        display: flex;
        justify-content: space-between;
        align-items: center;
        height: 4.5rem;
        padding: 28px 28px 28px 20px;
        width: 100%;
        line-height: 1.66;
        gap: 0.75rem;
        color: var(--clr-text-100);

        span {
          pointer-events: none;
          transition: color 0.3s cubic-bezier(0.5, 0, 0.15, 1);
          // background-color: red;
          padding: 8px;
          padding-right: 20px;
          @media (hover: hover) {
            &:hover {
              color: var(--clr-text-400);
            }
          }
        }

        img,
        svg {
          display: none;
          width: 11px;
        }
        &.coming-soon {
          span {
            @media (hover: hover) {
              &:hover {
                color: var(--clr-text-100);
              }
            }
          }

          span {
            &::after {
              content: "coming soon";
              background-color: var(--clr-bg-900);
              padding: 0.5em;
              padding-inline: 1em;
              font-size: 12px;
              border-radius: 999999px;
              border: 1px solid rgba(255, 255, 255, 0.08);
              position: relative;
              left: 12px;
            }
          }
        }
        &.active {
          color: var(--clr-text-400);

          img,
          svg {
            display: unset;
            fill: var(--clr-text-400);
          }
        }
      }
    }

    &.nav-open {
      nav {
        // visibility: unset;
        // pointer-events: unset;
      }
      ul {
        opacity: 1;
      }
      ul.upper-container {
        transition:
          transform 700ms cubic-bezier(0.75, 0, 0, 1.1),
          opacity 0ms cubic-bezier(0.75, 0, 0, 1.1) 200ms;
        transform: translateY(0) scale(1);

        li {
          a {
            transform: translateY(0);
            opacity: 1;
            transition:
              transform 250ms ease-out calc((var(--delay) * 50ms)),
              opacity 250ms ease-out calc((var(--delay) * 50ms));
          }
        }
      }
      ul.lower-container {
        transform: scale(1) translateY(0);
        opacity: 1;
        transition:
          transform 500ms cubic-bezier(0.75, 0, 0, 1.1),
          opacity 700ms cubic-bezier(0.75, 0, 0, 1.1);
      }

      .nav-hub {
        #cross,
        #logoOpen {
          transform: translateX(0);
          opacity: 1;
          pointer-events: unset;
          transition:
            transform 500ms cubic-bezier(0.42, 0.23, 0.25, 1.3) 150ms,
            opacity 700ms cubic-bezier(0.42, 0.23, 0.25, 1.3) 300ms;
        }
      }
    }
  }
</style>
