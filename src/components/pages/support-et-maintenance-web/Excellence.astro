---
import { Image } from "astro:assets";
import Title from "../../Title.astro";
import kooa from "../../../assets/kooa-logo-big.svg";
import Bentogrid from "./Bentogrid.astro";
---

<section>
  <div class="container">
    <div class="heading">
      <div class="img-wrapper">
        <Image class="logo-bg" src={kooa} alt="" />
      </div>
      <Title
        mainTitle="L'Excellence"
        accent="Sans Surprise"
        subTitle="Atouts"
      />
      <p>
        Découvrez un forfait tout inclus de 12 mois sans frais cachés. Profitez
        de support technique, mises à jour, et optimisation constante, le tout
        gratuitement.
      </p>
    </div>

    <Bentogrid />
  </div>
</section>

<style lang="scss">
  @use "../../../styles/utils.scss" as *;
  .container {
    position: relative;

    overflow: hidden;
    padding-bottom: 2rem;
    @include s(padding-top, 50, 100);
    display: flex;
    flex-direction: column;
    @include s(gap, 80, 100);
    .heading {
      .img-wrapper {
        position: absolute;
        z-index: -1;
        top: 0;
        left: 50%;
        transform: translateX(-50%);
        @include s(width, 400, 700);

        img {
          width: 100%;
          height: auto;
        }
        &::before {
          content: "";
          position: absolute;
          background: rgb(7, 8, 11);
          background: linear-gradient(
            0deg,
            rgba(7, 8, 11, 1) 0%,
            rgba(7, 8, 11, 0.3715861344537815) 100%
          );
          inset: 0;
        }
      }
      p {
        text-align: center;
        max-width: 45ch;
        margin-inline: auto;
        @include s(font-size, 16, 16);
        @include s(margin-top, 20, 40);
      }
    }
  }
</style>
