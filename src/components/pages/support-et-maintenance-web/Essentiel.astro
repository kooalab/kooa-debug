<style lang="scss">
  @use "../../../styles/utils.scss" as *;
  section {
    height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    &.animate {
      .light-bar {
        scale: 1;
        transition: scale 1s cubic-bezier(0.5, 0, 0.15, 1);
      }
      img {
        scale: 1;
        transition: scale 1s cubic-bezier(0.5, 0, 0.15, 1);
      }
      .bg-logo-wrapper {
        img {
          opacity: 1;
          transition: opacity 1s cubic-bezier(0.5, 0, 0.15, 1);
        }
      }
    }
  }

  .light {
    position: absolute;
    top: 0;
    width: 100%;

    .light-bar {
      scale: 0 1;
      height: 2px;
      widtth: 100%;
      background: rgb(244, 248, 252);
      background: linear-gradient(
        90deg,
        rgba(244, 248, 252, 0) 0%,
        rgba(244, 248, 252, 1) 50%,
        rgba(244, 248, 252, 0) 100%
      );
    }
    img {
      // margin-left: 40px;
      transform-origin: top;

      scale: 0;
      width: 100%;
      height: auto;
    }
  }

  .container {
    position: relative;
  }
  .heading {
    display: flex;
    flex-direction: column;
    @include s(gap, 20, 20);
    align-items: center;
    margin-bottom: 50px;
    h2.title {
      width: 12ch;
    }
    p {
      text-align: center;
      max-width: 40ch;
      @include s(font-size, 16, 16);
    }
    @media screen and (min-width: 1000px) {
      flex-direction: row;
      align-items: flex-end;
      p {
        text-align: left;
        @include s(margin-bottom, -12, 12);
        max-width: 36ch;
      }
    }
  }
  .bg-logo-wrapper {
    display: none;
    @media screen and (min-width: 901px) {
      display: grid;
      place-items: center;
      position: absolute;
      width: 100%;
      right: 0;
      min-width: 800px;
      // svg {
      //   @keyframes dash {
      //     to {
      //       fill: 90deg;
      //     }
      //   }

      //   .path {
      //     fill: url(#gradient);
      //   }
      // }

      img {
        opacity: 0;
        left: 10%;
        position: relative;
        width: 120%;
        height: auto;
      }
    }
  }
  .cards-wrapper {
    margin-left: 40px;
  }
  .card {
    padding-top: 32px;
    padding-bottom: 26px;
    width: 100%;
    &.expanded {
      h3 {
        color: var(--clr-text-100);
        svg {
          fill: var(--clr-text-100);
        }
      }
      .card-content {
        transition: all 500ms cubic-bezier(0.5, 0, 0.15, 1);
        opacity: 1;
      }
    }
  }

  .card-header {
    text-align: left;
    display: flex;
    align-items: center;
    gap: 12px;
    justify-content: space-between;

    h3 {
      font-weight: 600;
      @include s(font-size, 18, 20);
      color: var(--clr-text-400);
      display: flex;
      align-items: flex-start;
      gap: 8px;
      svg {
        @include s(width, 18, 20);
        height: auto;
        fill: var(--clr-text-400);
      }
    }
  }
  .card-content {
    display: flex;
    flex-direction: column;
    gap: 16px;
    height: 4px;
    opacity: 0;
    overflow: hidden;
    transition: all 500ms cubic-bezier(0.5, 0, 0.15, 1);
    p {
      max-width: 37ch;
      text-align: left;
      margin-top: 12px;
    }
    ul {
      display: flex;
      flex-direction: column;
      gap: 16px;
      li {
        color: var(--clr-text-100);
        display: flex;
        gap: 8px;
        align-items: center;
        line-height: 1.4;
        svg {
          @include s(max-width, 20, 18, false);
        }
      }
    }
  }
  @media screen and (max-width: 900px) {
    section {
      height: unset;
    }
    .separator {
      height: 1px;
      width: 100%;
      background-color: var(--clr-text-100);
      opacity: 0.1;
    }
    .line-wrapper {
      display: none;
    }
    .cards-wrapper {
      display: flex;
      flex-direction: column;
      margin-left: unset;
      width: 100%;
      gap: 12px;
      .card {
