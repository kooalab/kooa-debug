        }
      }
    }
  }
  .stepper-wrapper {
    display: flex;
    gap: 44px;
    align-items: center;
  }
  .line-wrapper {
    position: absolute;
    height: 630px;
    border-radius: 9999px;
    width: 4px;
    background-color: var(--clr-bg-700);
    overflow: hidden;

    .line {
      position: absolute;
      inset: 0;
      border-radius: 9999px;
      background: rgb(244, 248, 252);
      background: linear-gradient(
        0deg,
        rgba(244, 248, 252, 1) 0%,
        rgba(244, 248, 252, 0) 100%
      );
      transform: translateY(-100%);
    }
  }
</style>

<script>
  // @ts-nocheck
  document.addEventListener("DOMContentLoaded", (event) => {
    let activeCardIndex;
    const allCards = document.querySelectorAll(".stepper-wrapper .card");
    const lineElement = document.querySelector(".line");

    const essentialSection = document.querySelector(".essential-section");
    let essentialSectionHeight = essentialSection.offsetHeight;
    let scrollTriggerInstance;

    function openCard(index) {
      const card = allCards[index];
      const accordionContent = card.children[1];
      card.classList.add("expanded");
      accordionContent.style.height = accordionContent.scrollHeight + "px";

      allCards.forEach((otherCard) => {
        if (otherCard !== card) {
          otherCard.classList.remove("expanded");
          otherCard.children[1].style.height = 4 + "px";
        }
      });
    }

    function updateScrollAnimation(self) {
      const sectionHeight = self.end - self.start;
      const cardHeight = sectionHeight / 5;
      const scrollPosition = self.progress * sectionHeight;
      const translateYValue = -100 + 100 * self.progress;
      lineElement.style.transform = `translateY(${translateYValue}%)`;

      let cardIndex = Math.floor(scrollPosition / cardHeight);
      if (activeCardIndex !== cardIndex && cardIndex < 5) {
        activeCardIndex = cardIndex;
        openCard(activeCardIndex);
      }
    }

    function initScrollTrigger() {
      if (window.innerWidth > 900) {
        const cardContent =
          document.querySelector(".card.expanded").children[1];
        cardContent.style.height = cardContent.scrollHeight + "px";

        scrollTriggerInstance = ScrollTrigger.create({
          trigger: ".essential-section",
          start: "top top",
          end: `+=${essentialSectionHeight * 4}px`,
          pin: true,
          onUpdate: (self) => {
            window.requestAnimationFrame(() => updateScrollAnimation(self));
          },
        });
      }
    }
    function onResize() {
      essentialSectionHeight = essentialSection.offsetHeight;

      if (window.innerWidth <= 900 && scrollTriggerInstance) {
        scrollTriggerInstance.kill(); // Deactivate ScrollTrigger
        resetStyles(); // Reset styles related to animation
        scrollTriggerInstance = null;
      } else if (window.innerWidth > 900 && !scrollTriggerInstance) {
        initScrollTrigger();
      }
    }

    function resetStyles() {
      allCards.forEach((card) => {
        card.classList.add("expanded");
        card.children[1].removeAttribute("style");
      });
      lineElement.style.transform = "translateY(-100%)";
    }

    initScrollTrigger(); // Initialize ScrollTrigger on page load
    window.addEventListener("resize", onResize); // Listen for resize events
  });
</script>
