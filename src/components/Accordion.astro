---
const { title, text } = Astro.props;
---

<button class="accordion-item">
  <div class="accordion-header">
    <h3>{title}</h3>
    <svg
      width="12"
      height="12"
      viewBox="0 0 12 12"
      fill="none"
      xmlns="http://www.w3.org/2000/svg"
    >
      <!-- Horizontal line -->
      <path
        class="horizontal-line"
        d="M11.5 6c0 .5523-.4477 1-1 1H1.5c-.5523 0-1-.4477-1-1s.4477-1 1-1h9c.5523 0 1 .4477 1 1z"
        fill="#F4F8FC"></path>
      <!-- Vertical line -->
      <path
        class="vertical-line"
        d="M6 11.5c-.5523 0-1-.4477-1-1V1.5c0-.5523.4477-1 1-1s1 .4477 1 1v9c0 .5523-.4477 1-1 1z"
        fill="#F4F8FC"></path>
    </svg>
  </div>
  <div class="accordion-content">
    <p>{text}</p>
  </div>
</button>

<style lang="scss">
  @use "../styles/utils.scss" as *;

  .accordion-item {
    border: 1px solid transparent; /* Light border */
    border-radius: var(--border-radius);
    border: 1px solid transparent;
    background-color: var(--clr-bg-700);
    padding-top: 32px;
    padding-bottom: 26px;
    padding-inline: 32px;
    width: 100%;
    transition: border 500ms cubic-bezier(0.5, 0, 0.15, 1);
    &.expanded {
      border: 1px solid var(--clr-text-100);
      svg {
        .vertical-line {
          transform: rotate(90deg);
        }
      }
      .accordion-content {
        transition:
          height 500ms cubic-bezier(0.5, 0, 0.15, 1),
          opacity 500ms cubic-bezier(0.5, 0, 0.15, 1);
        opacity: 1;
      }
    }
  }

  .accordion-header {
    text-align: left;
    display: flex;
    align-items: center;
    gap: 12px;
    justify-content: space-between;

    h3 {
      font-weight: 600;
      line-height: 1.66;
    }
    svg {
      min-height: 13px;
      min-width: 13px;

      path {
        transition: transform 500ms cubic-bezier(0.5, 0, 0.15, 1.6);
        transform-origin: center;
      }
    }
  }
  .accordion-content {
    // padding-top: 8px;
    height: 4px;
    opacity: 0;
    overflow: hidden;
    transition:
      height 500ms cubic-bezier(0.5, 0, 0.15, 1),
      opacity 500ms cubic-bezier(0.5, 0, 0.15, 1);
    transform-origin: bottom;
    text-align: left;
    p {
      padding-top: 8px;
    }
  }
</style>
